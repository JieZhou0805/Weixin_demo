<!--miniprogram/pages/Qpage/Qpage.wxml-->
<view class="container">
  <!-- 第一页问题 -->
  <view class="questionPage1" wx:if="{{step === 1}}">
  <form bindsubmit="formSubmit">
    <view class="title">
      <image class="airpods" src="cloud://airpods-demo-vs3k9.6169-airpods-demo-vs3k9-1303866413/image/airpods.png" mode="aspectFill">
      </image>
      <text class="title_text">
        A survey about Airpods.
      </text>
    </view>
    <view class="questions">
      <text class="Q1">
        1. Please choose your unversity.
      </text>
      <view class="section">
        <picker bindchange="bindPickerChange" name="university" value="{{index}}" range="{{array}}">
          <view class="picker">
            {{array[index]}}
          </view>
        </picker>
      </view>

      <text class="Q2">
        2. Please enter your name.
      </text>
      <input class="input" type="text" name="username" bindinput="userNameInput"/>

      <text class="Q3">
        3. Please enter your student ID.
      </text>
      <input class="input" type="number" name="userID" bindinput="userIDInput"/>

      <text class="Q4">
        4. Please enter your date of birth.
      </text>
      <view class="section_date">
        <picker mode="date" value="{{date}}" start="1980-01-01" end="2020-09-01" name="Date" bindchange="bindDateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
    </view>

    <view class="questions">
      <text class="Q1">
        5. Do you think Airpods are necessary?
      </text>
      <view class="A1">
          <view class="section section_gap">
              <radio-group class="radio-group" bindchange="radioChange">
                  <radio class="radio"  wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
                      <text>{{item.value}}</text>
                  </radio>
              </radio-group>
          </view>
      </view>

      <text class="Q2">
        6. Do they really improve your quality of your life?
      </text>
      <view class="A2">
          <view class="section section_gap">
              <radio-group class="radio-group" bindchange="radioChange">
                  <radio class="radio"  wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
                      <text>{{item.value}}</text>
                  </radio>
              </radio-group>
          </view>
      </view>

      <text class="Q3">
        7. Have you ever lost one of your airpods?
      </text>
      <view class="A3">
          <view class="section section_gap">
              <radio-group class="radio-group" bindchange="radioChange">
                  <radio class="radio"  wx:for-items="{{items_2}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
                      <text>{{item.value}}</text>
                  </radio>
              </radio-group>
          </view>
      </view>
      <div class="nav">
          <button size="mini" form-type="submit">提交</button>
      </div>
    </view>
  </form>
  </view>


</view>